<com.woxthebox.draglistview.swipe.ListSwipeItem
    android:id="@+id/lsi_company_row"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:tag="kick rocks"
    app:leftViewId="@+id/itm_left"
    app:rightViewId="@+id/itm_right"
    app:swipeViewId="@+id/llh_row_company"
    >

    <TextView
        android:id="@+id/itm_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/llh_row_company"
        android:layout_alignTop="@+id/llh_row_company"
        android:background="#ff0000"
        android:gravity="start|center_vertical"
        android:padding="16dp"
        android:text="Red"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/itm_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/llh_row_company"
        android:layout_alignTop="@+id/llh_row_company"
        android:background="#0000ff"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:text="Blue"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        />

    <LinearLayout
        android:id="@+id/llh_row_company"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/img_company_logo"
            android:tag="company"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />

        <LinearLayout
            android:id="@+id/llv_company_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/txt_company_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Holler, Inc (HLLR)"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                />

            <TextView
                android:id="@+id/txt_stock_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$XX.XX"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />

        </LinearLayout>

    </LinearLayout>

<!--
</LinearLayout>
-->
</com.woxthebox.draglistview.swipe.ListSwipeItem>
